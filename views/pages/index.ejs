<body>
	<div class="container-fluid">
		<div class="row">
			<div class="col-md-2">
				<%- include ../partials/joinedList.ejs %>
			</div>
			<div class="col-md-10">
				<%- include ../partials/messagesList.ejs %>
			</div>
		</div>
		<div class="row">
			<div class="col-md-12">
				<form id="chatForm" class="form-horizontal" role="form">
					<div class="input-group">
						<input id="chatMessage" type="text" class="form-control" placeholder="Enter message ...">
						<span class="input-group-btn">
							<button id="sendChatMessage" class="btn btn-default" type="button">Go!</button>
						</span>
					</div>
					<!-- /input-group -->
				</form>
			</div>
		</div>
</body>
<script type="text/javascript">
	var socket = io();
	$('#sendChatMessage').on('click', function(){
		console.log($('#chatMessage').val());
		socket.emit('post message', $('#chatMessage').val());
		$('#chatMessage').val('');
		return false;
	});
</script>
